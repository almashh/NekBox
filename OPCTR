!     OPCTR is a set of arrays for tracking the number of operations,
!     and number of calls for a particular subroutine

    PARAMETER (MAXRTS=1000)
    COMMON /OPCTRC/ rname(MAXRTS)
    character(6) ::     rname

    COMMON /OPCTRD/ dct(MAXRTS),rct(MAXRTS),dcount
    real*8 :: dcount,dct,rct

    COMMON /OPCTRI/ ncall(MAXRTS),nrout

    integer :: myrout,isclld
    save    myrout,isclld
    data    myrout /0/
    data    isclld /0/
